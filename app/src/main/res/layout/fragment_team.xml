            android:src="@drawable/team0_title" />

        <ImageView
            android:id="@+id/team_anne"
            style="@style/Microage.ImageView"
            android:contentDescription="@string/home_content_description_mission_button"
            android:src="@drawable/team1_anne" />

        <ImageView
