            android:contentDescription="@string/home_content_description_mission_badge_button"
            android:src="@drawable/team2_sam" />

        <ImageView
            android:id="@+id/team_kim"
            style="@style/Microage.ImageView"
            android:contentDescription="@string/home_content_description_ask_an_astronaut_button"
            android:src="@drawable/team3_kim" />

        <ImageView
            android:id="@+id/team_harvey"
            style="@style/Microage.ImageView"
            android:contentDescription="@string/home_content_description_meet_the_team_button"
